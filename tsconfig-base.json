
{
    "compilerOptions": {
      "composite": true,
      "target": "es2018",
      "lib": [
        "es2015",
        "dom",
        "webworker",
        "es2017"
      ],
      "declarationMap": true,
      "downlevelIteration": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "watch": false,
      "strictNullChecks": false,
      "alwaysStrict": false,
      "strict": false,
      "noImplicitAny": false,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "typeRoots": [
        "node_modules/@augurproject/types/types",
        "node_modules/@types"
      ]
    },
    "exclude": [
      "**/node_modules",
      "**/build"
    ]
  }