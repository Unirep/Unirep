    },
    "homepage": "https://github.com/appliedzkp/UniRep#readme",
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.0.4",
        "@types/node": "^14.14.7",
        "chai": "^4.2.0",
        "ethereum-waffle": "^3.3.0",
        "hardhat": "^2.3.0",
        "keyv": "^4.0.3",
        "ts-node": "^9.0.0"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^3.4.2",
        "argparse": "^2.0.1",
        "base64url": "^3.0.1",
        "circom": "^0.5.38",
        "circomlib": "^0.5.1",
        "ethers": "^5.2.0",
        "libsemaphore": "^1.0.15",
        "maci-config": "^0.7.4",
